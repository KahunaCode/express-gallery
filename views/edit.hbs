<h5>Edit photo #{{photo.id}}: {{photo.title}}</h5>

<form action="/gallery/{{photo.id}}/edit" method="post" enctype="application/x-www-form-urlencoded">
  <input type="hidden" name="_method" value="PUT">
  <label for="title">Title</label>
  <br>
  <input type="text" id="title" name="title" value="{{photo.title}}">
  <br>
  <br>
  <label for="author">Author</label>
  <br>
  <input type="text" id="author" name="author" value="{{photo.author}}">
  <br>
  <br>
  <label for="link">URL Link</label>
  <br>
  <input type="text" id="link" name="link" value="{{photo.link}}">
  <br>
  <br>
  <label for="desc">Description</label>
  <br>
  <input type="text" id="desc" name="desc" value="{{photo.description}}">
  <br>
  <br>
  <input type="submit" value="submit">
</form>