  <label for="title">Title</label>
  <br>
  <input type="text" id="title" name="title" placeholder="Enter a title">
  <br>
  <br>
  <label for="author">Author</label>
  <br>
  <input type="text" id="author" name="author" placeholder="Author name">
  <br>
  <br>
  <label for="link">URL Link</label>
  <br>
  <input type="text" id="link" name="link" placeholder="URL">
  <br>
  <br>
  <label for="desc">Description</label>
  <br>
  <input type="text" id="desc" name="desc" placeholder="Description">
  <br>
  <br>
  <input type="submit" value="submit">
</form>